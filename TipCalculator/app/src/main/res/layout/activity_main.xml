<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".MainActivity"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_calculator"
        android:textSize="30sp"
        android:textColor="#4caf50"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/billAmountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter total Bill"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/titleTextView"
        android:layout_marginBottom="16dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bill_input_edit_text"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/chooseTipText"
        android:layout_below="@+id/billAmountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Choose Tip: "
        android:layout_marginBottom="8dp"
        />

    <RadioGroup
        android:id="@+id/tipOptionGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseTipText"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        >

        <RadioButton
            android:id="@+id/tip_10_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp"
            />

        <RadioButton
            android:id="@+id/tip_15_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15%"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp"
            />

        <RadioButton
            android:id="@+id/tip_20_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp"
            />
    </RadioGroup>


    <Button
        android:id="@+id/calculateButton"
        android:layout_below="@+id/tipOptionGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="Calculate"
        android:textColor="#FFFFFF" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background"
        android:layout_below="@+id/calculateButton"
        >
    </LinearLayout>
    
    <TextView
        android:id="@+id/tipAmountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="Tip Amount: \n$0.00"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#346536"
        android:layout_below="@+id/calculateButton"
        />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Total Amount: \n$0.00"
        android:textSize="30sp"
        android:textColor="#346536"
        android:layout_below="@+id/tipAmountTextView"
        />
</RelativeLayout>